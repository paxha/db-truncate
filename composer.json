{
    "name": "paxha/db-truncate",
    "description": "Truncate all db tables",
    "type": "laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Hassan Raza Pasha",
            "email": "e.hassanrazapasha@gmail.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/paxha/db-truncate.git"
        }
    ],
    "require": {
        "php": "^7.2",
        "doctrine/dbal": "^2.10"
    },
    "require-dev": {
        "orchestra/testbench": "^4.4",
        "phpunit/phpunit": "^8.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "DBTruncate\\DBTruncateServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "DBTruncate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DBTruncate\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testsuite Feature"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
